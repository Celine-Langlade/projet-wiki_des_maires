                {y: 20, legendText:"EPCI", label: "EPCI 20%"},
                {y: 5,  legendText:"autre", label: "autre 5%"}
            ];
            var bmp = [{x:"Etat"}, { x: "Région"}, { x: "Département"}, { x: "EPCI"}, {x: "autre"}];
            //dataPoints.

            var chart = new CanvasJS.Chart("chartContainer",{
                title :{
                    text: "Financement"
                },
                data: [{
                    type: "pie",
                    dataPoints : dps,
                    indexLabels : bmp
                }],
                legendText: bmp
            });

            chart.render();
