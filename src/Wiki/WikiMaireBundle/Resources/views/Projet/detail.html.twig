                xVal++;
                if (dps.length >  10 )
                {
                    dps.shift();
                }

                chart.render();

// update chart after specified time.

            };
        }
    </script>

<div id="chartContainer" style="height: 300px; width: 100%;"></div>


{% endblock %}

