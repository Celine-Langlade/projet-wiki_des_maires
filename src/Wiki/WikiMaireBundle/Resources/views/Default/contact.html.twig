{% extends '::base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css">
    <link rel="stylesheet" href="font-awesome/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="css/modern-business.css">
    <link rel="stylesheet" href="{{ asset('bundles/wikiwikimaire/css/contact.css') }}" type="text/css"/>
{% endblock %}

{% block body -%}


<body class="my_background" style="background-image:url({{ asset('bundles/wikiwikimaire/img/contact.png') }})">

<!-- Contact Details Column -->
<div class="col-md-3">
</div>

<!-- /.row -->

<!-- Contact Form -->
<!-- In order to set the email address and subject line for the contact form go to the bin/contact_me.php file. -->
<div class="row">
    <div class="col-md-5">
        <h3>Nous contacter</h3>

        <form ="sentMessage" id="contactForm" method="POST" action="#" novalidate>
            <div class="control-group form-group">
                <div class="controls">
                    <span class="input-group-addon" id="basic-addon3">Nom & Pr√©nom</span>
                    <input type="text" class="form-control" id="name" required
                           data-validation-required-message="Indiquer votre nom & prenom.">

                    <p class="help-block"></p>
                </div>
            </div>
            <div class="control-group form-group">
                <div class="controls">
                    <span class="input-group-addon" id="basic-addon3">Numero telephone</span>
                    <input type="tel" class="form-control" id="phone" required
                           data-validation-required-message="Votre numero de telephone.">
                </div>
            </div>
            <div class="control-group form-group">
                <div class="controls">
                    <span class="input-group-addon" id="basic-addon3">Votre adresse Email</span>
                    <input type="email" class="form-control" id="email" required
                           data-validation-required-message="Votre Adresse Email.">
                </div>
            </div>
            <div class="control-group form-group">
                <div class="controls">
                    <span class="input-group-addon" id="basic-addon3">Votre Message</span>
                    <textarea rows="10" cols="100" class="form-control" id="message" required
                              data-validation-required-message="Votre message" maxlength="999"
                              style="resize:none"></textarea>
                </div>
            </div>
            <div id="success"></div>
    </div>
    <div class="col-md-offset-4 col-md-1">
        <!-- For success/fail messages -->
        <input type="submit" value="Envoyez">
    </div>
    </form>


</div>
<!-- /.row -->

<hr>

{% endblock %}
